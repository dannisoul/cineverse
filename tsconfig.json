{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@mocks/*": [
        "src/mocks/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@home/*": ["src/features/home/*"],
      "@movies/*": ["src/features/movies/*"],
      "@tv/*": ["src/features/tv/*"],
      "@shared/*": ["src/features/shared/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}