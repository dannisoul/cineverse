---
import Movie from "@src/icons/Movie.astro";
import Tv from "@src/icons/Tv.astro";
---

<section class="min-h-screen bg-[url('/img/our-services-bg.webp')] flex items-center bg-bottom relative">
    <div class="absolute inset-0 bg-black/75"></div>
    <div class="relative flex w-full items-center justify-center p-8">
        <div class="basis-1/2 hidden lg:block">
        </div>
        <article class="flex flex-col gap-2 services-description">
            <span class="text-xl font-medium drop-shadow-2xl relative before:absolute before:w-4 before:h-1 before:bg-emerald-500 pl-6 before:left-0 before:top-[50%] before:translate-y-[-50%]">Our Services</span>
            <h3 class="text-4xl font-bold text-pretty max-w-2xl drop-shadow-2xl">All your favorite movies and TV shows, in one place.</h3>
            <p class="max-w-xl mt-4 drop-shadow-2xl">Search for any movie or TV show on our platform and discover all the details, from reviews and episodes to scores, trailers, cast information, and more.</p>
            <div class="flex items-center gap-2 mt-8">
                <div class="border-2 border-dashed border-emerald-500 rounded-full w-16 h-16 flex items-center justify-center bg-black/75 shrink-0">
                    <Tv width='32' height='32' />
                </div>
                <div>
                    <h4 class="font-bold">TV Shows</h4>
                    <p class="max-w-lg text-sm">Browse your favorite shows and find reviews, scores, cast information, and episode lists.</p>
                </div>
            </div>
            <div class="flex items-center gap-2 mt-8">
                <div class="border-2 border-dashed border-emerald-500 rounded-full w-16 h-16 flex items-center justify-center bg-black/75 shrink-0">
                    <Movie width='32' height='32' />
                </div>
                <div>
                    <h4 class="font-bold">Movies</h4>
                    <p class="max-w-lg text-sm">Explore your favorite movies and discover reviews, scores, cast details, and trailers.</p>
                </div>
            </div>
        </article>
    </div>
</section>

<style>
    .services-description{
        animation: swipe-in ease-in;
        animation-timeline: view();
        animation-range: entry;
    }

    @keyframes swipe-in {
        from{transform: translateX(300px); opacity: 0;}
        to{transform: translateX(0px); opacity: 1;}
    }
</style>